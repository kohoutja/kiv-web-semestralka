<h2>Správa uživatelů</h2><br>
<table class="table table-striped table-hover">
    <thead>
    <tr class="bg-primary">
        <th>Jméno</th>
        <th>Username</th>
        <th>E-mail</th>
        <th>Role</th>
        <th>Akce</th>
    </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.fullName }}</td>
            <td>{{ user.username }}</td>
            <td class="user-email">{{ user.email }}</td>
            <td><select class="form-control role-select">
                    {% for role in roles %}
                        {% set selected="" %}
                        {% if user.role == role.id %}
                            {% set selected="selected" %}
                        {% endif %}
                        <option {{ selected }}>{{ role.role }}</option>
                    {% endfor %}
                </select></td>
            <td>
                <button type="button" class="btn btn-secondary change-role">Změnit roli</button>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>